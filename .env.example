# --- Configuración General ---
# Clave secreta para sesiones de Flask (obligatoria en producción)
SECRET_KEY=cambia_esta_clave_por_una_larga_y_segura

# --- Base de Datos PostgreSQL ---
POSTGRES_USER=fichador_user
POSTGRES_PASSWORD=fichador_pass
POSTGRES_DB=fichador_db
# Host del servicio de BBDD (nombre del servicio en docker-compose)
POSTGRES_HOST=db 

# --- Configuración de Flask ---
# True para desarrollo, False para producción
FLASK_DEBUG=False
# Controla si SQLAlchemy registra cambios (False ahorra recursos)
SQLALCHEMY_TRACK_MODIFICATIONS=False

# --- Email (SMTP) ---
# Configuración para envío de notificaciones
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_contraseña_de_aplicacion
MAIL_DEFAULT_SENDER=noreply@tempus.com

# --- MFA (On new IPs) ---
MFA_ENABLED=True

# --- INITIAL ADMIN CREDENTIALS ---
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_INITIAL_PASSWORD=admin123

# --- Google OAuth & Calendar ---
# Credenciales de Google Cloud Console
GOOGLE_OAUTH_CLIENT_ID=tu_cliente_id_de_google
GOOGLE_OAUTH_CLIENT_SECRET=tu_secreto_de_google
GOOGLE_CALENDAR_ID=primary

# En producción con HTTPS, elimina esta línea o ponla a 0
OAUTHLIB_INSECURE_TRANSPORT=1

# --- Modos de Fichaje ---
# True: Permite crear/editar fichajes manualmente (Declarativo - Modo Clásico)
# False: Solo permite botón Start/Stop en tiempo real (Nuevo Modo)
ENABLE_MANUAL_ENTRY=True